{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "lib": ["es2017"],
        "allowJs": false,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "newLine": "LF"
    },
    "exclude": ["node_modules", "test"]
}
